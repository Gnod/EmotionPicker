<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

	<RelativeLayout 
	    android:id="@+id/ac_comment_editor_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    >
	    <com.example.emotionpicker.ImageEditText 
	    android:id="@+id/ac_comment_editor"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="40dp"
	    android:gravity="top"
	    android:scrollbars="vertical"
	    android:duplicateParentState="true"
	    />
		<RelativeLayout 
		    android:id="@+id/ac_comment_editor_bottom"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:gravity="center_vertical"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:layout_alignParentBottom="true"
		    >
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:orientation="horizontal"
			    >
			    <ImageView 
			        android:id="@+id/comment_btn_emotion"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:background="@drawable/btn_emotion"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
			        />
			</LinearLayout>		    
		</RelativeLayout>
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/layout_emotion"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:background="#3B3B3B"
	    android:visibility="gone"
	    >
		<GridView 
		    android:id="@+id/grid_emotion_thumb"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="10dp"
		    android:numColumns="6"
		    android:gravity="center"
		    >
		</GridView>
	</LinearLayout>
</LinearLayout>